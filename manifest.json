{
    "name": "Guilt Tripper",
    "version": "1.0",
    "description": "tracks time spent procrastinating",
    "manifest_version": 2,
    "options_page": "options.html",
    "permissions": ["tabs","webNavigation","declarativeContent","storage"],
    "background":{
        "scripts": ["background.js"],
        "persistence" : "false"
    },
    "browser_action":{
        "default_popup": "./popup.html",
        "default_icon": {
            "16": "./images/icon.png",
            "32": "./images/icon.png",
            "64": "./images/icon.png",
            "128": "./images/icon.png"
        }
    },
    "icons":{
        "16": "./images/icon.png",
        "32": "./images/icon.png",
        "64": "./images/icon.png",
        "128": "./images/icon.png"
    }
}